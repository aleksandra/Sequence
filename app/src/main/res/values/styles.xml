<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="numbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLength">@integer/maxLength</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="customKeyboardNumberButton">
        <item name="android:layout_height">?android:listPreferredItemHeight</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:onClick">writeNumber</item>
    </style>

    <style name="customKeyboardFunctionalButton">
        <item name="android:layout_height">?android:listPreferredItemHeight</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
